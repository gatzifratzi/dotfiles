# KEYBINDINGS
#fuer eine liste einfach 'keybinds' in ghostty tippen
#quick terminal
keybind = global:control+command+option+space=toggle_quick_terminal

#tab navigation
keybind = alt+left_bracket=previous_tab
keybind = alt+right_bracket=next_tab
keybind = alt+shift+left_bracket=move_tab:-1
keybind = alt+shift+right_bracket=move_tab:1

#split navigation
keybind = alt+d=new_split:auto
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up
keybind = alt+l=goto_split:right
