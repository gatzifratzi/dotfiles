// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
//
// command pallete ist cmd + shift + p
{
    //STANDARD SACHEN
    "vim_mode": false,
    "base_keymap": "VSCode",
    "autosave": "off",
    "restore_on_startup": "last_session",
    "hour_format": "hour24",
    "soft_wrap": "editor_width",
    "current_line_highlight": "all",
    "features": {
        "inline_completion_provider": "zed",
        "copilot": false
    },

    //VISUELLES

    //Themes
    // Material dark, KTRZ Monokai, Kanagawa, Everforest Dark, Ros√© Pine, Custom, Catpuccin blurred (cmd-k cmd-t)
    "theme": "Catppuccin Macchiato (Blur)",
    "experimental.theme_overrides": {
        "background.appearance": "blurred"
    },

    //Fonts
    "cursor_shape": "bar",
    "ui_font_size": 16,
    "ui_font_family": "MonaspiceAr Nerd Font Mono",
    "buffer_font_size": 18,
    "buffer_font_family": "MonaspiceNe Nerd Font Mono",
    "buffer_font_features": {},
    "buffer_line_height": "comfortable",

    //Active Pane Modifiers
    "active_pane_modifiers": {
        "inactive_opacity": 0.8,
        "border_size": 0
    },

    //Tabs
    "tab": {
        "close_position": "right",
        "file_icons": false,
        "git_status": true,
        "activate_on_close": "history"
    },

    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": true
    },

    "preview_tabs": {
        "enabled": true,
        "enable_preview_from_file_finder": false,
        "enable_preview_from_code_navigation": false
    },

    //Git
    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": true,
            "show_commit_summary": true,
            "delay_ms": 0
        }
    },

    //Wo und wie wird was im UI angezeigt
    //Project Panel
    "project_panel": {
        "button": true,
        "default_width": 200,
        "dock": "left",
        "entry_spacing": "comfortable",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 15,
        "indent_guides": true,
        "auto_reveal_entries": true,
        "auto_fold_dirs": true,
        "scrollbar": {
            "show": null
        },
        "indent_guides": {
            "show": "always"
        }
    },

    "outline_panel": {
        "button": true,
        "default_width": 200,
        "dock": "left",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 15,
        "auto_reveal_entries": true,
        "auto_fold_dirs": true,
        "indent_guides": {
            "show": "always"
        },
        "scrollbar": {
            "show": null
        }
    },

    "assistant": {
        "provider": {
            "name": "ollama",
            "default_model": {
                "name": "deepseek-r1:7b",
                "display_name": null,
                "max_tokens": 16384,
                "keep_alive": -1
            }
        },
        "enabled": true,
        "button": true,
        "dock": "right",
        "default_width": 500,
        "default_height": 320,
        //"provider": "openai",
        "version": "1"
    },

    "collaboration_panel": {
        "dock": "right"
    },
    "chat_panel": {
        "dock": "right"
    },

    //TERMINAL
    "terminal": {
        "dock": "bottom",
        "alternate_scroll": "off",
        "blinking": "terminal_controlled",
        "copy_on_select": false,
        "env": {},
        "font_family": "MonaspiceKr Nerd Font Mono",
        "font_size": 16,
        "option_as_meta": false,
        "shell": "system",
        "working_directory": "current_project_directory"
    },

    //Telemetry
    "telemetry": {
        "diagnostics": true,
        "metrics": true
    },

    //LSPs und Formatierung
    "enable_language_server": true,
    "hover_popover_enabled": true,
    "lsp_highlight_debounce": 50,
    "hover_popover_delay": 50,
    "hard_tabs": false,
    "tab_size": 4,
    "use_autoclose": true,
    "show_completions_on_input": true,
    "show_completion_documentation": true,
    "format_on_save": "on",
    "remove_trailing_whitespace_on_save": true,
    "ensure_final_newline_on_save": true,

    "inlay_hints": {
        "enabled": true,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true,
        "show_background": false,
        "edit_debounce_ms": 700,
        "scroll_debounce_ms": 50
    },

    "languages": {
        "Haskell": {
            "enable_language_server": true,
            "language_servers": ["hls", "..."],
            "formatter": "language_server"
        },
        "LaTeX": {
            "formatter": "language_server"
        },
        "Python": {
            "enable_language_server": true,
            "language_servers": ["!pyright", "pylsp", "..."],
            "formatter": "prettier"
        },
        "C++": {
            "enable_language_server": true,
            "language_servers": ["clangd", "..."],
            "formatter": "prettier"
        }
    },

    "lsp": {}
}
