// Extension:
// themes: Zedokai, Blade Runner, Rose Pine, Kanagawa, Gruvbox baby, 0x96f, nyxvamp
// icons: catpuccin, material, colored zed, serendipity
//
// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
//
// command pallete ist cmd + shift + p
{
    //STANDARD SACHEN
    "sticky_scroll": {
        "enabled": true
    },
    "vim_mode": true,
    "relative_line_numbers": "enabled",
    "base_keymap": "VSCode",
    "autosave": "off",
    "restore_on_startup": "last_session",
    "soft_wrap": "bounded",
    "preferred_line_length": 120,
    "show_wrap_guides": true,
    "lsp_document_colors": "background",
    "current_line_highlight": "all",
    "when_closing_with_no_tabs": "close_window",
    "use_system_prompts": false,
    "use_system_path_prompts": false,
    "scrollbar": {
        "show": "auto",
        "axes": {
            "horizontal": false,
            "vertical": true
        }
    },
    "minimap": {
        "show": "never"
    },

    //Diagnostics (Inline)
    "diagnostics": {
        "include_warnings": true,
        "inline": {
            "enabled": true,
            "min_column": 80
        }
    },
    "repl": {
        "max_columns": 128,
        "max_lines": 32
    },

    //VISUELLES
    // Themes (cmd-k cmd-t)
    // Skeletor, Hanso Dark, Cursor Blur, Sandstorm Dark, Perf Warm
    "theme": "NyxVamp Veil",
    "icon_theme": "Catppuccin Macchiato",
    "unnecessary_code_fade": 0.25,

    //Fonts
    "cursor_shape": "bar",
    "agent_ui_font_size": 17,
    "agent_buffer_font_size": 18,
    "ui_font_size": 17,
    "ui_font_family": "Monocraft Nerd Font",
    "buffer_font_size": 18,
    "buffer_font_weight": 500, // default 400
    "buffer_font_family": "jakobsArgon",
    "buffer_line_height": "comfortable",
    "buffer_font_features": {
        //das sind die ligatures und so
        "calt": false,
        "liga": true,
        "ss01": true,
        "ss03": true,
        "ss06": true,
        "ss08": true,
        "ss09": true,
        "ss10": true
    },
    //comments italic machen (ich wuerde fuer comments sehr gerne eine andere schriftart nutzen, aber das geht nicht)(habe fonts als workaround gemerged)
    "experimental.theme_overrides": {
        "syntax": {
            "comment": {
                "font_style": "italic"
            }
        }
    },

    //Active Pane Modifiers(split view)
    "active_pane_modifiers": {
        "inactive_opacity": 0.9,
        "border_size": 1
    },

    //Tabs
    "tabs": {
        "close_position": "right",
        "file_icons": true,
        "git_status": true
    },

    //weil ich das schon 3 mal vergessen habe
    //preview tabs sind die kursiven tabs, die sich wieder schliessen, wenn man nichts editiert oder sie per doppelklick oeffnet
    "preview_tabs": {
        "enabled": true,
        "enable_preview_from_file_finder": false,
        "enable_preview_from_code_navigation": false
    },

    //Editor Toolbar
    "toolbar": {
        "code_actions": true
    },

    //titlebar
    "title_bar": {
        "show_menus": false,
        "show_branch_icon": true
    },

    //Git
    "git": {
        "git_gutter": "tracked_files",
        "hunk_style": "staged_hollow",
        "branch_picker": {
            "show_author_name": true
        },
        "inline_blame": {
            "enabled": true,
            "show_commit_summary": false,
            "padding": 8
        },
        "blame": {
            "show_avatar": true
        }
    },

    //Wo und wie wird was im UI angezeigt
    "git_panel": {
        "sort_by_path": true, //die settings mal bischen testen. ich wiess nicht ob ich die sortierung nach tracked/untracked brauche und dann ist die ja cooler.
        "status_style": "icon",
        "dock": "left",
        "default_width": 512
    },
    //Project Panel
    "project_panel": {
        "button": true,
        "default_width": 256,
        "dock": "left",
        "entry_spacing": "comfortable",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "show_diagnostics": "errors",
        "indent_size": 16,
        "indent_guides": {
            "show": "always"
        },
        "auto_reveal_entries": true,
        "auto_fold_dirs": true
    },
    //outline Panel
    "outline_panel": {
        "button": true,
        "dock": "left",
        "default_width": 256,
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 16,
        "auto_reveal_entries": true,
        "auto_fold_dirs": true,
        "indent_guides": {
            "show": "always"
        }
    },

    "collaboration_panel": {
        "dock": "right",
        "button": false
    },
    "notification_panel": {
        "dock": "right",
        "button": false
    },

    //TERMINAL
    "terminal": {
        "dock": "bottom",
        "button": true,
        "default_height": 512,
        "alternate_scroll": "on",
        "blinking": "terminal_controlled",
        "cursor_shape": "bar",
        "copy_on_select": false,
        "env": {},
        "font_family": "Monaspace Krypton NF",
        "font_size": 17,
        "option_as_meta": false,
        "shell": "system",
        "working_directory": "current_project_directory",
        "minimum_contrast": 30
    },
    // KI Agent
    "agent": {
        "always_allow_tool_actions": true,
        "use_modifier_to_send": true,
        "default_profile": "write",
        "enabled": true,
        "button": true,
        "dock": "right",
        "default_width": 512,
        "default_model": {
            "provider": "google",
            "model": "gemini-2.5-flash"
        }
    },
    "debugger": {
        "dock": "right",
        "button": true,
        "save_breakpoints": true
    },

    // EDIT PREDICTIONS
    "features": {
        "edit_prediction_provider": "none" //durch 'none' deaktiviert
    },
    "edit_predictions_disabled_in": ["string", "comment"], //ich weiss nicht, warum das nicht im edit_predictions block funktioniert...
    "edit_predictions": {
        "disabled_globs": null,
        "mode": "subtle",
        "copilot": {
            "proxy": null,
            "proxy_no_verify": null
        },
        "enabled_in_text_threads": false
    },

    "inlay_hints": {
        "enabled": true,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true,
        "show_background": true,
        "edit_debounce_ms": 0,
        "scroll_debounce_ms": 0
    },

    //LSPs und Formatierung
    "lsp_highlight_debounce": 50,
    "hover_popover_delay": 80,
    "tab_size": 4,

    "languages": {
        "Haskell": {
            "enable_language_server": true,
            "language_servers": ["hls", "..."],
            "formatter": "language_server"
        },
        "C++": {
            "enable_language_server": true,
            "language_servers": ["clangd", "..."],
            "formatter": "language_server",
            "format_on_save": "on",
            "use_on_type_format": true
        },
        "Python": {
            "enable_language_server": true,
            "language_servers": ["!pyright", "!pylsp", "basedpyright", "..."],
            "formatter": "prettier"
        },
        "TypeScript": {
            "enable_language_server": true,
            "language_servers": ["!typescript-language-server", "vtsls", "..."],
            "formatter": "prettier"
        },
        "JavaScript": {
            "enable_language_server": true,
            "language_servers": ["!typescript-language-server", "vtsls", "..."],
            "formatter": "prettier"
        },
        "HTML": {
            "enable_language_server": true,
            "language_servers": ["microsoft/vscode-html-languageservice", "..."],
            "formatter": "prettier"
        },
        "CSS": {
            "enable_language_server": true,
            "language_servers": ["tailwindcss-language-server", "..."],
            "formatter": "language_server"
        }
    },

    "lsp": {
        //texlab = latex extension. kein build on save (wegen tectonic)
        "texlab": {
            //actually geht das jetzt auch mit tectonic. ich find meine loesung aber besser
            "settings": {
                "texlab": {
                    "build": {
                        "onSave": false
                    }
                }
            }
        },
        "ltex": {
            "settings": {
                "ltex": {
                    "language": "de-DE", //sprache von ltex
                    "enabled": ["latex", "bibtex"] //fuer welche sprachen ltex aktiv ist.
                }
            }
        }
    }
}
